<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anmvg.cerenia.CartController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <HBox alignment="CENTER_LEFT" prefHeight="20.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" prefWidth="110.0" text="Retour" textAlignment="CENTER">
            <styleClass>
               <String fx:value="btn" />
               <String fx:value="btn-default" />
            </styleClass>
         </Button>
         <Pane prefWidth="425.0" />
         <Label styleClass="h2" text="Mon panier" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <Pane prefWidth="425.0" />
         <Button fx:id="validateButton" mnemonicParsing="false" prefWidth="110.0" text="Valider" textAlignment="CENTER">
            <styleClass>
               <String fx:value="btn" />
               <String fx:value="btn-success" />
            </styleClass>
         </Button>
      </children>
      <padding>
         <Insets top="10.0" />
      </padding>
   </HBox>
   <ScrollPane fx:id="mainPane" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
     <content>
       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
     </content>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </ScrollPane>
</VBox>
